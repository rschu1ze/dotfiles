[submodule]
    recurse = true # make 'git pull' and other commands work with submodules
[alias]
    a = add
    b = branch
    bd = branch --delete --force
    bm = branch --move --force
    c = commit
    cl = clean --force -d
    ca = commit --amend
    co = alias_no_longer_needed # deliberately gives an error ... alias can be removed once enough muscle memory is ther
    cob = use_git_sw_instead # deliberately gives an error ... alias can be removed once enough muscle memory is ther
    cp = cherry-pick
    dc = diff --cached
    f = fetch --all --prune
    g = grep
    l = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
    m = merge
    p = push
    pl = pull --prune --rebase
    r = rebase
    st = status --ignore-submodules # too slow otherwise
    sh = show
    sw = switch
    swc = switch --create
    wipe = reset --hard
    # Worktrees don't play well with submodules
    # wt = worktree
    # wta = worktree add -b
    unstage = reset HEAD
